<resources>

    <!-- Attributes used for launcher theme -->
    <attr name="mico_allAppsScrimColor" format="color" />
    <attr name="mico_allAppsInterimScrimAlpha" format="integer" />
    <attr name="mico_allAppsNavBarScrimColor" format="color" />
    <attr name="mico_popupColorPrimary" format="color" />
    <attr name="mico_popupColorSecondary" format="color" />
    <attr name="mico_popupColorTertiary" format="color" />
    <attr name="mico_isMainColorDark" format="boolean" />
    <attr name="mico_isWorkspaceDarkText" format="boolean" />
    <attr name="mico_workspaceTextColor" format="color" />
    <attr name="mico_workspaceShadowColor" format="color" />
    <attr name="mico_workspaceAmbientShadowColor" format="color"/>
    <attr name="mico_workspaceKeyShadowColor" format="color" />
    <attr name="mico_workspaceStatusBarScrim" format="reference" />
    <attr name="mico_widgetsTheme" format="reference" />

    <!-- BubbleTextView specific attributes. -->
    <declare-styleable name="BubbleTextView">
        <attr name="mico_layoutHorizontal" format="boolean" />
        <attr name="mico_iconSizeOverride" format="dimension" />
        <attr name="mico_iconDisplay" format="integer">
            <enum name="workspace" value="0" />
            <enum name="all_apps" value="1" />
            <enum name="folder" value="2" />
            <enum name="widget_section" value="3" />
            <enum name="shortcut_popup" value="4" />
        </attr>
        <attr name="mico_centerVertically" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ShadowInfo">
        <attr name="mico_ambientShadowColor" format="color" />
        <attr name="mico_ambientShadowBlur" format="dimension" />
        <attr name="mico_keyShadowColor" format="color" />
        <attr name="mico_keyShadowBlur" format="dimension" />
        <attr name="mico_keyShadowOffset" format="dimension" />
    </declare-styleable>

    <!-- PagedView specific attributes. These attributes are used to customize
         a PagedView view in XML files. -->
    <declare-styleable name="PagedView">
        <!-- The page indicator for this workspace -->
        <attr name="mico_pageIndicator" format="reference" />
    </declare-styleable>

    <!-- XML attributes used by default_workspace.xml -->
    <declare-styleable name="Favorite">
        <attr name="mico_className" format="string" />
        <attr name="mico_packageName" format="string" />
        <attr name="mico_container" format="string" />
        <attr name="mico_screen" format="string" />
        <attr name="mico_x" format="string" />
        <attr name="mico_y" format="string" />
        <attr name="mico_spanX" format="string" />
        <attr name="mico_spanY" format="string" />
        <attr name="mico_icon" format="reference" />
        <attr name="mico_title" format="string" />
        <attr name="mico_uri" format="string" />
    </declare-styleable>

    <declare-styleable name="Extra">
        <attr name="mico_key" format="string" />
        <attr name="mico_value" format="string" />
    </declare-styleable>
    <declare-styleable name="Include">
        <attr name="mico_workspace" format="reference" />
        <attr name="mico_folderItems" format="reference" />
    </declare-styleable>

    <declare-styleable name="InsettableFrameLayout_Layout">
        <attr name="mico_layout_ignoreInsets" format="boolean" />
    </declare-styleable>

    <declare-styleable name="InvariantDeviceProfile">
        <attr name="mico_name" format="string" />
        <attr name="mico_minWidthDps" format="float" />
        <attr name="mico_minHeightDps" format="float" />

        <attr name="mico_numRows" format="integer" />
        <attr name="mico_numColumns" format="integer" />
        <!-- numFolderRows & numFolderColumns defaults to numRows & numColumns, if not specified -->
        <attr name="mico_numFolderRows" format="integer" />
        <attr name="mico_numFolderColumns" format="integer" />
        <!-- numHotseatIcons defaults to numColumns, if not specified -->
        <attr name="mico_numHotseatIcons" format="integer" />

        <attr name="mico_iconSize" format="float" />
        <!-- landscapeIconSize defaults to iconSize, if not specified -->
        <attr name="mico_landscapeIconSize" format="float" />
        <attr name="mico_iconTextSize" format="float" />

        <attr name="mico_defaultLayoutId" format="reference" />
        <attr name="mico_demoModeLayoutId" format="reference" />
    </declare-styleable>

    <declare-styleable name="CellLayout">
        <attr name="mico_containerType" format="integer">
            <enum name="workspace" value="0" />
            <enum name="hotseat" value="1" />
            <enum name="folder" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ShadowDrawable">
        <attr name="android:src" />
        <attr name="android:shadowColor" />
        <attr name="android:elevation" />
        <attr name="mico_darkTintColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RecyclerViewFastScroller">
        <attr name="mico_canThumbDetach" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomAppWidgetProviderInfo">
        <attr name="mico_providerId" format="integer" />

        <attr name="android:label" />
        <attr name="android:initialLayout" />
        <attr name="android:icon" />
        <attr name="android:previewImage" />
        <attr name="android:resizeMode" />

        <attr name="mico_numRows" />
        <attr name="mico_numColumns" />
        <attr name="mico_numMinRows" format="integer" />
        <attr name="mico_numMinColumns" format="integer" />
    </declare-styleable>
</resources>
